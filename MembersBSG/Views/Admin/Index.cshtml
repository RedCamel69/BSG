@model BSG.WebUI.Models.AdminViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Admin Page</h2>

<div class="alert alert-info" role="alert">
    Here we can implement admin functions - maintaining users, editing page templates, uploading videos, training material , items for ecommerce, geo location information for clubs, bsg coaches
</div>
<div>
    
    <hr />
    <a href="BlogAdmin\Post">Administer Your Blog</a>
    <hr/>
   
    <div class="container">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <p><span class="glyphicon glyphicon-fire"></span>   <a data-toggle="collapse" href="#collapse1">Your Coaches</a></p>
                    </h4>
                </div>
                <div id="collapse1" class="panel-collapse in" style="height: auto;">
                    <div class="panel-body">
                        <ul class="list-group">

                            @foreach (var coach in Model.Coaches)
                            {
                                <li class="list-group-item">
                                   
                                    <span class="label label-success">@coach.UserName</span>
                                    
                                </li>

                            }
                        </ul>
                    </div>
                    <div class="panel-footer">You have @Model.Coaches.Count coach registered.</div>
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="container">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <p><span class="glyphicon glyphicon-fire"></span>   <a data-toggle="collapse" href="#collapse2">Your Students</a></p>
                    </h4>
                </div>
                <div id="collapse2" class="panel-collapse in" style="height: auto;">
                    <div class="panel-body">
                        <ul class="list-group">

                            @foreach (var coach in Model.Students)
                            {
                                <li class="list-group-item">

                                    <span class="label label-success">@coach.UserName</span>

                                </li>

                            }
                        </ul>
                    </div>
                    <div class="panel-footer"></div>
                </div>
            </div>
        </div>
    </div>

</div>
