@model BSG.WebUI.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<br />

<style>
    .thumbnail {
  position: relative;
  -moz-transition: 0.3s;
  -webkit-transition: 0.3s;
  -o-transition: 0.3s;
  transition: 0.3s;
}
.thumbnail .caption {
  padding: 23px 21px 21px 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}
.bg2 {
  background: rgba(34, 37, 51, 0.8);
}
.thumb-shadow:hover {
  box-shadow: 9px 13px 26px -8px #222533;
}
img {
  vertical-align: middle;
  max-width: 100%;
  height: auto;
}
.img-responsive {
  display: block;
  max-width: 100%;
  height: auto;
}
</style>



<div class="row">
    <a href="registerasacoach" class="btn btn-success btn-lg" style="font-size: 200%;">
        <div>
            Register As A Coach <span class="glyphicon glyphicon-circle-arrow-right"></span>
        </div>
    </a>

</div>

<br />

<div class="row">
    <a href="javascript:alert('Is This Required?')" class="btn btn-success btn-lg" style="font-size: 200%;">
        <div>
            Register As A Student <span class="glyphicon glyphicon-circle-arrow-right"></span>
        </div>
    </a>

</div>

