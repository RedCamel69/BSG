@model BSG.WebUI.Models.CoachViewModel

@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BSG Coaches</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <style type="text/css">
        body {
            background-color: white;
            color: green;
            font-family: sans-serif;
            font-size: 16px;
        }

        img{
                border-style: solid;
    border-width: 10px;
    border-radius: 10px;
    padding: 10px;
    margin: 10px;
        max-width: 200px;
    max-height: 300px;
        }
    </style>

    <div style="text-align:center">
        <h4>BSG Coaches Template 2</h4>
        <hr />
        <div class="row">
            @Html.DisplayFor(model => model.FirstName)
            @Html.DisplayFor(model => model.SecondName)
        </div>
        <div class="row">
            <img src="~/Content/images/bglogin.jpg" />
            <img src="@Model.Image1Path" />
        </div>
        <div class="row">
            @Html.DisplayNameFor(model => model.Phone)
            @Html.DisplayFor(model => model.Phone)
        </div>

        <div class="row">
            @Html.DisplayNameFor(model => model.Email)
            @Html.DisplayFor(model => model.Email)
        </div>

        <div class="row">
            @Html.DisplayNameFor(model => model.TemplateId)
            @Html.DisplayFor(model => model.TemplateId)
        </div>
        </div>
</body>
</html>




